@using Entities
@using Achievements.BLL.Interfaces
@using Achievements.DependencyResolver
@using Achievements
@using Ninject
@{
    Layout = null;
    var uToALogic = DependencyResolver.Kernel.Get<IUtoALogic>();
}

@if (User.Identity.IsAuthenticated)
{
    if (IsPost)
    {
        if (Request["Action"] != null &&
            Request["Action"] == "Give")
        {

            uToALogic.Add(int.Parse(Request["UserId"]), int.Parse(Request["AchievementId"]));
            Response.Redirect("/index.cshtml");
        }
    }
}
else
{
    Response.Redirect("/index.cshtml");
}
